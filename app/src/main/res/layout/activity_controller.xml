<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="draegerit.de.arduinoconsole.ControllerActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme.PopupOverlay">

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="124dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/controllerarrowbutton" />

    <ImageView
        android:id="@+id/buttonDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/imageView6"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonarrow"
        android:clickable="true"
        app:srcCompat="@drawable/arrowdown" />

    <ImageView
        android:id="@+id/buttonUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView6"
        android:layout_below="@+id/appbar"
        android:background="@drawable/buttonarrow"
        android:clickable="true"
        android:rotation="180"
        app:srcCompat="@drawable/arrowdown" />

    <ImageView
        android:id="@+id/buttonRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/buttonUp"
        android:background="@drawable/buttonarrow"
        android:clickable="true"
        android:rotation="90"
        app:srcCompat="@drawable/arrowdown" />

    <ImageView
        android:id="@+id/buttonLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonUp"
        android:layout_marginStart="17dp"
        android:layout_toEndOf="@+id/imageView6"
        android:background="@drawable/buttonarrow"
        android:clickable="true"
        android:rotation="270"
        app:srcCompat="@drawable/arrowdown" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/buttonLeft"
        android:layout_marginEnd="109dp"
        android:background="@drawable/controllerarrowbutton"
        android:text="TextView"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/buttonB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView29"
        android:layout_alignStart="@+id/buttonC"
        android:background="@drawable/buttonb"
        android:clickable="true"
        android:enabled="true"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:text="B"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buttonA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView29"
        android:layout_marginStart="42dp"
        android:layout_toEndOf="@+id/buttonB"
        android:background="@drawable/buttona"
        android:clickable="true"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:text="A"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buttonC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView29"
        android:layout_below="@+id/textView29"
        android:layout_marginEnd="55dp"
        android:background="@drawable/buttonc"
        android:clickable="true"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:text="C"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buttonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/buttonA"
        android:layout_below="@+id/textView29"
        android:background="@drawable/buttond"
        android:clickable="true"
        android:enabled="true"
        android:paddingLeft="4dp"
        android:paddingTop="6dp"
        android:text="D"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/alertBtnUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonB"
        android:layout_toEndOf="@+id/buttonUp"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/buttonLeft"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alertBtnLeft"
        android:layout_marginEnd="52dp"
        android:layout_toStartOf="@+id/buttonLeft"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonC"
        android:layout_toEndOf="@+id/buttonDown"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonUp"
        android:layout_toEndOf="@+id/buttonB"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/alertBtnD"
        android:layout_alignTop="@+id/alertBtnB"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonDown"
        android:layout_toEndOf="@+id/buttonB"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/alertBtnC"
        android:layout_toEndOf="@+id/buttonD"
        app:srcCompat="@drawable/alert" />

    <TextView
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonDown"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/buttonDown"
        android:background="@drawable/buttonfunction"
        android:clickable="true"
        android:enabled="true"
        android:paddingTop="8dp"
        android:text="@string/txt_button_start"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/buttonSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonStart"
        android:layout_alignBottom="@+id/buttonStart"
        android:layout_toStartOf="@+id/buttonC"
        android:background="@drawable/buttonfunction"
        android:clickable="true"
        android:enabled="true"
        android:paddingTop="8dp"
        android:text="@string/txt_button_select"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/alertBtnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_toEndOf="@+id/buttonStart"
        app:srcCompat="@drawable/alert" />

    <ImageView
        android:id="@+id/alertBtnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonSelect"
        android:layout_toEndOf="@+id/buttonSelect"
        app:srcCompat="@drawable/alert" />

</RelativeLayout>
