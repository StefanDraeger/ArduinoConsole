<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/serialToggleImage"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:maxWidth="30dp"
            android:minWidth="30dp"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:id="@+id/serialTitelText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:layout_weight="0.95"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="@string/usbserialdevice"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/serialRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="85dp"
            android:text="Baudrate"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/baudSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/consoleTextView"
            android:layout_alignTop="@+id/checkBox"
            android:layout_marginLeft="10dp"
            android:entries="@array/baudarray"
            android:minWidth="120dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/serialRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="85dp"
            android:text="Databits"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/databitSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/databitsarray"
            android:minWidth="120dp"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/serialRow3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="85dp"
            android:text="Stopbits"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/stopbitsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/stopbitsarray"
            android:minWidth="120dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/serialRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="85dp"
            android:text="Parity"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/paritySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/parityarray"
            android:minWidth="120dp"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btToggleImage"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:maxWidth="30dp"
            android:minWidth="30dp"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:id="@+id/btTitelText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/bluetoothdevice"
            android:textColor="@android:color/black"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <CheckBox
            android:id="@+id/sendLineBreaksChkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appendLineBreakAfterCommand" />

        <CheckBox
            android:id="@+id/showSearchNewDevicesChkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_search_new_devices_dialog" />

        <CheckBox
            android:id="@+id/closeBluetoothConnectionCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="0.10"
            android:text="@string/txtAskForCloseBluetoothConnection" />

        <CheckBox
            android:id="@+id/sendGreetingsChkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="0.10"
            android:text="@string/blt_greeting_chkbox" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/blt_greeting_lbl"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/greetingsMessageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:ems="8"
            android:inputType="text"
            android:maxWidth="150dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/httpToggleImage"
            android:layout_width="53dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.05"
            android:maxWidth="30dp"
            android:minWidth="30dp"
            app:srcCompat="@drawable/plus" />

        <TextView
            android:id="@+id/httpTitelText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="@string/http_connection"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/httpRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="85dp"
            android:text="@string/http_profile_lbl"
            android:textAlignment="textEnd"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/httpProfileSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:minWidth="120dp"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/httpRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <ImageButton
            android:id="@+id/addProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            app:srcCompat="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/removeProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            app:srcCompat="@android:drawable/ic_delete" />

        <ImageButton
            android:id="@+id/editProfileBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            app:srcCompat="@android:drawable/ic_menu_edit" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="@string/clickplusminustoexpand" />

    </LinearLayout>

</LinearLayout>