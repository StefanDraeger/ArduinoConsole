<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="draegerit.de.arduinoconsole.MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/commandTextView"
            android:layout_width="252dp"
            android:layout_height="44dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/consoleTextView"
            android:layout_weight="0.66"
            android:ems="10"
            android:enabled="false"
            android:inputType="none"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="15dp" />

        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/consoleTextView"
            android:layout_alignTop="@+id/commandTextView"
            android:layout_toEndOf="@+id/commandTextView"
            android:layout_weight="0.33"
            android:enabled="false"
            android:text="Send"
            tools:layout_editor_absoluteX="280dp"
            tools:layout_editor_absoluteY="16dp" />

        <ImageButton
            android:id="@+id/clearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_delete" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:minHeight="60px"
        android:padding="3dp">

        <ScrollView
            android:id="@+id/consoleScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:layout_weight="1"
            android:background="@drawable/consoleborder">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/consoleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/baudSpinner"
                    android:layout_below="@+id/sendBtn"
                    android:layout_centerHorizontal="true"
                    android:gravity="bottom"
                    android:padding="4dp"
                    android:paddingTop="6dp"
                    tools:layout_editor_absoluteX="16dp"
                    tools:layout_editor_absoluteY="74dp" />
            </LinearLayout>
        </ScrollView>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/autoScrollCheckbox"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="Autoscroll" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:layout_weight="0.10"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:text="USB Device"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/configureBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_preferences" />

    </TableRow>

    <TableRow
        android:id="@+id/config1TblRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <Spinner
            android:id="@+id/driverSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"
            android:textAlignment="textEnd" />

        <ImageButton
            android:id="@+id/refreshDeviceBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/stat_notify_sync_noanim" />
    </TableRow>

    <TableRow
        android:id="@+id/config2TblRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="85dp"
                    android:text="Baudrate"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/baudSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/consoleTextView"
                    android:layout_alignTop="@+id/checkBox"
                    android:entries="@array/baudarray"
                    android:minWidth="120dp"
                    android:textAlignment="textEnd"
                    tools:layout_editor_absoluteX="198dp"
                    tools:layout_editor_absoluteY="444dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="85dp"
                    android:text="Databits"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/databitSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/databitsarray"
                    android:minWidth="120dp"
                    android:textAlignment="textEnd" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="85dp"
                    android:text="Stopbits"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/stopbitsSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/stopbitsarray"
                    android:minWidth="120dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="85dp"
                    android:text="Parity"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black" />

                <Spinner
                    android:id="@+id/paritySpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/parityarray"
                    android:minWidth="120dp" />
            </LinearLayout>

        </LinearLayout>

    </TableRow>

    <TableRow
        android:id="@+id/config3TblRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:visibility="gone">

        <Button
            android:id="@+id/connectBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_span="2"
            android:layout_weight="1"
            android:enabled="false"
            android:text="Connect" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/hyperlinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:layout_weight="1"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="18sp" />
    </TableRow>

</TableLayout>
